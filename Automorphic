class Solution {
    public boolean isArmstrong(int x) {
        if(x>=0)
        {
            int i,d,s=0
            for(i=x;i>0;i=i/10)
            {
                d=i%10;
                s = s + Math.paw(10,d);
            }
            if(s==x)
                return true;
            else
                return false;
        }
        else
            return false;
    }
    public static void main(String args[])
    {
        Scanner sc = new Scanner (System.in);
        int num=sc.nextInt();
        Solution ib = new Solution();
        boolean r= ib.isArmstrong(num);
        System.out.println(r);
    }
}
